{
  "name": "blog",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --write '**/*.js'",
    "dev": "next -p 4444",
    "build": "next build"
  },
  "pre-commit": "lint",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true
  },
  "eslintConfig": {
    "plugins": [
      "react"
    ],
    "extends": [
      "plugin:prettier/recommended",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parser": "babel-eslint",
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "arrow-spacing": "error",
      "block-spacing": "error",
      "curly": "error",
      "default-case": "error",
      "eol-last": "error",
      "import/no-duplicates": "error",
      "key-spacing": [
        "error",
        {
          "beforeColon": false,
          "afterColon": true
        }
      ],
      "keyword-spacing": [
        "error",
        {
          "after": true,
          "before": true
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "log",
            "warn",
            "error"
          ]
        }
      ],
      "no-debugger": "error",
      "no-else-return": "error",
      "no-extra-bind": "error",
      "no-implicit-coercion": "error",
      "no-multi-spaces": [
        "error",
        {
          "ignoreEOLComments": true,
          "exceptions": {
            "VariableDeclarator": true,
            "AssignmentExpression": true,
            "AssignmentPattern": true
          }
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ],
      "no-template-curly-in-string": "error",
      "no-trailing-spaces": "error",
      "no-undef-init": "error",
      "no-unused-vars": "error",
      "no-useless-escape": "off",
      "no-var": 1,
      "object-shorthand": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "one-var": [
        "error",
        "never"
      ],
      "padded-blocks": [
        "error",
        "never"
      ],
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "next": [
            "export",
            "if",
            "switch",
            "for",
            "try",
            "function"
          ],
          "prev": "*"
        },
        {
          "blankLine": "any",
          "next": "export",
          "prev": "export"
        },
        {
          "blankLine": "always",
          "next": "*",
          "prev": [
            "if",
            "switch",
            "for",
            "try",
            "function"
          ]
        },
        {
          "blankLine": "always",
          "prev": [
            "const",
            "let",
            "var"
          ],
          "next": "*"
        },
        {
          "blankLine": "any",
          "prev": [
            "const",
            "let",
            "var"
          ],
          "next": [
            "const",
            "let",
            "var"
          ]
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "return"
        }
      ],
      "prefer-arrow-callback": "error",
      "prefer-const": "error",
      "react/display-name": "off",
      "react/jsx-wrap-multilines": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/prop-types": "off",
      "react/jsx-tag-spacing": [
        "error",
        {
          "beforeSelfClosing": "always"
        }
      ],
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "require-await": "error",
      "semi": "error",
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "ignore"
        }
      ],
      "spaced-comment": 1,
      "space-infix-ops": [
        "error",
        {
          "int32Hint": false
        }
      ],
      "strict": "error",
      "template-curly-spacing": [
        "error",
        "never"
      ]
    }
  },
  "dependencies": {
    "next": "^9.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-react": "^7.16.0",
    "prettier": "^1.19.1"
  }
}
